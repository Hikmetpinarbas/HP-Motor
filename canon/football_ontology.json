    "JDP": {
      "id": "phil_pos_play",
      "name": "Pozisyonel Oyun (Juego de Posición)",
      "focus": "Spacing, 3rd-man, positional superiority, controlled progression",
      "biological_priority": "Bilişsel Hız > Saf Fiziksel Güç",
      "key_metrics": [
        "xt_value",
        "line_break_passes_90",
        "half_space_receives",
        "contextual_awareness_score",
        "decision_speed_mean_s"
      ]
    },
    "REL": {
      "id": "phil_relationism",
      "name": "İlişkisel Oyun (Relationism)",
      "focus": "Relations, improvisation, dynamic triangles, micro-adaptations",
      "biological_priority": "Çeviklik & Denge > Konum Sadakati",
      "key_metrics": [
        "progressive_carries_90",
        "xt_value",
        "scan_freq_10s",
        "contextual_awareness_score",
        "turnover_danger_index"
      ]
    },
    "GEG": {
      "id": "phil_gegen",
      "name": "Gegenpressing (Heavy Metal)",
      "focus": "Counter-press, transition dominance, repeated intensity",
      "biological_priority": "Dayanıklılık (VO2max) & Tekrarlı Sprint (RSA)",
      "key_metrics": [
        "ppda",
        "turnover_danger_index",
        "progressive_carries_90",
        "defender_side_on_score"
      ]
    },
    "CAT": {
      "id": "phil_catenaccio",
      "name": "Modern Catenaccio / Derin Blok",
      "focus": "Compactness, risk control, deep defending, selective transitions",
      "biological_priority": "Fiziksel Güç & Konsantrasyon",
      "key_metrics": [
        "ppda",
        "turnover_danger_index",
        "square_on_rate",
        "channeling_to_wing_rate"
      ]
    }
  },

